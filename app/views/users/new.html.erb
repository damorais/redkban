
<h2>Create your account</h2>

<%= form_with scope: :user, local: true, url: users_path do |form| %>
  <div class="form-horizontal">
    
    <div class="form-group">
      <%= form.label :email %>
      <% if @user and @user.errors.messages[:email] %>
      <div class="text-danger small">
        <%= @user.errors.messages[:email].to_sentence %>
      </div>
      <% end %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :firstname %>
      
      <%= form.text_field :firstname, class: "form-control" %>  
    </div>

    <div class="form-group">
      <%= form.label :lastname %>
      <%= form.text_field :lastname, class: "form-control" %>  
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.text_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :confirm_password %>
      <%= form.text_field :confirm_password, class: "form-control" %>
    </div>
    <%= form.submit "Create My User", class: "btn btn-success" %>
  </div>
<% end %>